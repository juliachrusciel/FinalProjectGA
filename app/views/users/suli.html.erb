<body id="signup-login-page">
  <h1>Log In</h1>

  <div id="login-form">
    <%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <%= f.submit 'Log In', id: 'login-button'%>
    <% end %>
  </div>

  <div id="signup-form">
    <%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <%= f.submit 'Sign Up', id: 'signup-button'%>
    <% end %>
  </div>

